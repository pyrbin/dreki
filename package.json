{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm build --filter=\"@dreki.land/*\" --filter=\"dreki\" --filter=\"dreki-*\"",
    "changeset": "changeset",
    "lint": "eslint ./packages --ext=ts",
    "format": "prettier --write packages/**/* --config .prettierrc --ignore-path .gitignore",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch --testTimeout=10000",
    "release": "pnpm build && pnpm publish --filter=\"@dreki.land/*\" --filter=\"dreki\" --filter=\"dreki-*\""
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=6"
  },
  "dependencies": {
    "three": "^0.128.0",
    "dreki": "workspace:*"
  },
  "devDependencies": {
    "@types/three": "^0.128.0",
    "@changesets/cli": "^2.16.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "esbuild-runner": "^1.3.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.0-beta"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "rootDir": "packages/",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "esbuild-runner/jest"
      ]
    }
  }
}
